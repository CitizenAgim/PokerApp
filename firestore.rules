rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // VALIDATION FUNCTIONS
    // ============================================
    
    // Validate player document structure and limits
    function isValidPlayer(player) {
      return player.name != null 
        && player.name is string
        && player.name.size() >= 1
        && player.name.size() <= 100;
    }
    
    // Validate session document structure and limits
    function isValidSession(session) {
      return session.name != null 
        && session.name is string
        && session.name.size() >= 1
        && session.name.size() <= 200;
    }

    // ============================================
    // USER DOCUMENT + SETTINGS
    // ============================================
    
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Owner has full write access
      allow write: if isOwner(userId);
      
      // Allow other authenticated users to update ONLY friendsCount
      // This is needed when accepting friend requests
      allow update: if isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friendsCount']);
      
      // ============================================
      // PLAYERS SUBCOLLECTION
      // ============================================
      
      match /players/{playerId} {
        // Helper function to check if requester is a friend
        function isFriend() {
          return exists(/databases/$(database)/documents/users/$(userId)/friends/$(request.auth.uid));
        }
        
        // Owner: full read/write access
        // Friends: read-only access (for linked player sync)
        allow read: if isOwner(userId) || (isAuthenticated() && isFriend());
        allow write: if isOwner(userId);
      }
      
      // ============================================
      // SESSIONS SUBCOLLECTION
      // ============================================
      
      match /sessions/{sessionId} {
        // Owner: full read/write access
        allow read, write: if isOwner(userId);
        
        // Legacy hands subcollection
        match /hands/{handId} {
          allow read: if isOwner(userId);
          allow write: if false; // No new writes to legacy location
        }
      }
      
      // ============================================
      // HANDS SUBCOLLECTION (NEW - top level under user)
      // ============================================
      
      match /hands/{handId} {
        // Owner: full read/write access
        allow read, write: if isOwner(userId);
      }
      
      // ============================================
      // IMPORTS SUBCOLLECTION
      // ============================================
      
      match /imports/{importId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============================================
      // FRIENDS SUBCOLLECTION
      // ============================================
      
      match /friends/{friendId} {
        // Owner: full read/write access to their friends list
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
        
        // Allow a user to add themselves as a friend to another user's list
        // This happens when accepting a friend request - the accepter adds
        // themselves to the requester's friends list
        allow create: if isAuthenticated() && friendId == request.auth.uid;
        
        // Allow a user to remove themselves from another user's list (unfriend)
        allow delete: if isAuthenticated() && friendId == request.auth.uid;
      }
    }
    
    // ============================================
    // FRIEND REQUESTS COLLECTION
    // ============================================
    
    match /friendRequests/{requestId} {
      // Users can read requests they sent or received
      allow read: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      
      // Users can create requests only as sender with pending status
      allow create: if isAuthenticated() && 
        request.resource.data.fromUserId == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // Only recipient can accept/decline
      allow update: if isAuthenticated() && 
        resource.data.toUserId == request.auth.uid &&
        request.resource.data.status in ['accepted', 'declined'];
      
      // Only sender can delete their pending request
      allow delete: if isAuthenticated() && 
        resource.data.fromUserId == request.auth.uid &&
        resource.data.status == 'pending';
    }

    // ============================================
    // RANGE SHARES COLLECTION
    // ============================================
    
    match /rangeShares/{shareId} {
      // Users can read shares they sent or received
      allow read: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
      
      // Users can create shares only as sender
      // Limit of max 20 pending shares per recipient is enforced in app layer
      allow create: if isAuthenticated() && 
        request.resource.data.fromUserId == request.auth.uid;
      
      // Sender can update (for duplicate replacement)
      allow update: if isAuthenticated() && 
        resource.data.fromUserId == request.auth.uid;
      
      // Sender can delete pending shares, recipient can delete any
      allow delete: if isAuthenticated() && 
        (resource.data.fromUserId == request.auth.uid || 
         resource.data.toUserId == request.auth.uid);
    }

    // ============================================
    // PLAYER LINKS COLLECTION
    // ============================================
    
    match /playerLinks/{linkId} {
      // Helper function to check if user is part of the link
      function isLinkParticipant() {
        return resource.data.userAId == request.auth.uid || 
               resource.data.userBId == request.auth.uid;
      }
      
      // Helper function to check if users are friends
      // Checks if userB exists in userA's friends subcollection
      function areFriends(userAId, userBId) {
        return exists(/databases/$(database)/documents/users/$(userAId)/friends/$(userBId));
      }
      
      // Users can read links they are part of
      allow read: if isAuthenticated() && isLinkParticipant();
      
      // Users can create links only as User A (creator)
      // Must be creating a link with a friend (friendship validated in app layer)
      allow create: if isAuthenticated() && 
        request.resource.data.userAId == request.auth.uid &&
        request.resource.data.status == 'pending' &&
        areFriends(request.auth.uid, request.resource.data.userBId);
      
      // User B can accept a pending link (update status to active, set their player)
      // User A or B can update their lastSyncedVersion
      allow update: if isAuthenticated() && isLinkParticipant() && (
        // User B accepting the link
        (resource.data.userBId == request.auth.uid && 
         resource.data.status == 'pending' &&
         request.resource.data.status == 'active') ||
        // Either user updating their sync version (active links only)
        (resource.data.status == 'active' && 
         request.resource.data.status == 'active' &&
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userALastSyncedVersion']) ||
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userBLastSyncedVersion'])))
      );
      
      // Either participant can delete the link
      // User A can cancel pending, either can remove active
      allow delete: if isAuthenticated() && isLinkParticipant();
    }

    // ============================================
    // LEGACY COLLECTIONS (Read-only for migration)
    // ============================================
    
    // Old flat players collection - allow read for migration, no new writes
    match /players/{playerId} {
      allow read: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
      allow write: if false;  // No new writes to legacy collection
    }
    
    // Old flat playerRanges collection - allow read for migration
    match /playerRanges/{rangeId} {
      allow read: if isAuthenticated();
      allow write: if false;  // No new writes to legacy collection
    }
    
    // Old flat sessions collection - allow read for migration, no new writes
    match /sessions/{sessionId} {
      allow read: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
      allow write: if false;  // No new writes to legacy collection
    }

    // Old flat hands collection
    match /hands/{handId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow write: if false;  // No new writes to legacy collection
    }
  }
}
